<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:contentDescription="@string/dummy_description"
        android:scaleType="centerCrop"
        android:src="@drawable/seavphov_dummy" />

    <TextView
        android:id="@+id/bookTitle"
        android:text="Siem Reap"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bookCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="As new"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_condition"
        android:drawablePadding="8dp" />

    <TextView
        android:id="@+id/bookPrice"
        android:text="$10"
        android:textSize="18sp"
        android:textColor="@color/seavphov_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>
