<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
        android:id="@id/body_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/backicon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/dummy_description"
                android:src="@drawable/ic_back" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/dummy_description"
                android:src="@drawable/seavphov_addbook" />

            <TextView
                android:id="@+id/addBook"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/add_book"
                android:textAlignment="center"
                android:textColor="@color/seavphov_primary"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/book_title"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/book_title"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_title"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/addbook_roundedcorner_box"
                android:hint="@string/addBook_title"
                android:inputType="text"
                android:textSize="12sp"
                android:padding="8dp"
                tools:ignore="TextFields" />

            <TextView
                android:id="@+id/book_author"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/book_author"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_author"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/addbook_roundedcorner_box"
                android:hint="@string/addBook_author"
                android:inputType="text"
                android:textSize="12sp"
                android:padding="8dp"
                tools:ignore="TextFields" />

            <TextView
                android:id="@+id/book_category"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/book_category"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/addbook_roundedcorner_box"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawablePadding="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/book_condition"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/book_condition"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_condition"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/addbook_roundedcorner_box"
                android:drawableEnd="@drawable/ic_dropdown"
                android:drawablePadding="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:spinnerMode="dropdown" />

            <TextView
                android:id="@+id/book_description"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/book_author"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_description"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/addbook_roundedcorner_box"
                android:hint="@string/addBook_description"
                android:inputType="text"
                android:gravity="top"
                android:textSize="12sp"
                android:padding="10dp"
                tools:ignore="TextFields" />

            <TextView
                android:id="@+id/book_location"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/book_location"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_location"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/addbook_roundedcorner_box"
                android:hint="@string/addBook_location"
                android:inputType="text"
                android:textSize="12sp"
                android:padding="8dp"
                tools:ignore="TextFields" />

            <TextView
                android:id="@+id/book_upload"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/book_upload"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/upload_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/addbook_roundedcorner_box"
                android:padding="20dp"
                android:drawableTop="@drawable/ic_upload"
                android:text="@string/addBook_upload"
                android:textColor="@color/gray_text"
                android:elevation="0dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/less_rounded_corner"
                android:padding="10sp"
                android:text="@string/add_book"
                android:textColor="@android:color/white" />



        </LinearLayout>


    </LinearLayout>
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>