<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="21dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_margin="16dp" />

    <!-- Follower and Following Section -->

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_pf"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/seavphov_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backArrow"
        app:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:text="Kry Sokuntheary"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toRightOf="@id/profilePicture"
        app:layout_marginTop="8dp"
        tools:layout_editor_absoluteY="59dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/followerStats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toRightOf="@id/profilePicture"
        app:layout_marginTop="8dp">

    </LinearLayout>

    <!-- Email -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/followerStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_marginTop="16dp"
        app:layout_marginStart="16dp"
        app:layout_marginEnd="16dp">

    </LinearLayout>

    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="krysokuntheary@gmail.com"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/profilePicture"
        tools:layout_editor_absoluteX="71dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/email"
        android:src="@drawable/ic_mail"
        app:layout_constrationRight_toLeftOf="@string/email"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="171dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/following"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="10K Following"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:textAlignment="center"
        android:text="250K Followers"
        android:textColor="#000000"
        android:textSize="12sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="012 345 678"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/mail"
        tools:layout_editor_absoluteX="71dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_telephone"
        app:layout_constrationRight_toEndOf="@string/email"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="197dp" />

    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="I like reading books, and playing games."
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/phone"
        tools:layout_editor_absoluteX="71dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_heart"
        app:layout_constrationRight_toEndOf="@string/phone"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="228dp" />

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="231dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/myBookButton"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button"
            android:text="My Book"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/savedBookButton"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:background="@drawable/rounded_button"
            android:text="Saved Book"
            android:textColor="#FFFFFF"
            android:textSize="10dp"  />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
